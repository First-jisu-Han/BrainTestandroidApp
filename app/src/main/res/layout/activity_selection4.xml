<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selection4"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="343dp"
        android:layout_height="91dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/mainwriting"
        android:gravity="center"
        android:text="@string/question4"
        android:textColor="#F5FFFFFF"
        android:textColorLink="#E8FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/please7">

        <RadioButton
            android:id="@+id/rightRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainwriting"
            android:text="@string/rightMusic"
            android:textColor="#DCFFFFFF"
            android:checked="true"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/leftRadio"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainwriting"
            android:text="@string/leftMusic"
            android:textColor="#DCFFFFFF"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/please7"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/mainwriting"
        android:gravity="center"
        android:text="@string/please"
        android:textColor="#E1FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="240dp"
        android:layout_height="67dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/font"
        android:text="@string/goNext"
        android:textSize="40sp"
        app:backgroundTint="#41FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="262dp"
        android:layout_height="228dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/please7"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/listeningmusic" />
</androidx.constraintlayout.widget.ConstraintLayout>