<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selection3"
    android:background="@drawable/background"
  >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="108dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/mainwriting"
        android:gravity="center"
        android:text="@string/question3"
        android:textColor="#F5FFFFFF"
        android:textColorLink="#E8FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="240dp"
        android:layout_height="67dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/font"
        android:text="@string/goNext"
        android:textSize="40sp"
        app:backgroundTint="#41FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/please3">

        <RadioButton
            android:id="@+id/rightRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainwriting"
            android:text="@string/right"
            android:textColor="#DCFFFFFF"
            android:checked="true"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/leftRadio"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainwriting"
            android:text="@string/left"
            android:textColor="#DCFFFFFF"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/please3"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/mainwriting"
        android:gravity="center"
        android:text="@string/please"
        android:textColor="#E1FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="279dp"
        android:layout_height="258dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/please3"
        app:srcCompat="@drawable/crosslegs" />
</androidx.constraintlayout.widget.ConstraintLayout>